# =============================================================================
# DJANGO BOILERPLATE - Production Environment
# =============================================================================
# WARNING: Update all values before deploying to production
# NEVER commit this file with real credentials to version control
# =============================================================================

# Django Core Settings
DEBUG=False
SECRET_KEY=generate-a-strong-secret-key-for-production
ENVIRONMENT=server
SITE_ID=1

# Domain Settings
DOMAIN=example.com
PROTOCOL=https
TIME_ZONE=UTC
ALLOWED_HOSTS=example.com,www.example.com

# Database Settings (PostgreSQL)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=django_boilerplate_prod
DB_USER=db_user
DB_PASS=strong-database-password-here
DB_HOST=localhost
DB_PORT=5432

# Email Settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@example.com

# Mailchimp Settings
MAILCHIMP_API_KEY=your-production-mailchimp-api-key
MAILCHIMP_FROM_EMAIL=noreply@example.com
